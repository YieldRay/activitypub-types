{
    "compilerOptions": {
        "noEmit": true,
        "declaration": true,
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["**/*"],
    "exclude": ["node_modules"]
}
